<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>
<!-- Main Content -->
<main class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-10">
            <h1><%= title %></h1>
            <% if(typeof displayName=='string' && displayName) { %>
                <a href="/teamlist/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add a Book </a>
            <br>
            <% } %>
            <br>
    <table class= "table table-bordered table-striped table-hover">
    <tr class="d-flex">
    <% if(typeof displayName=='string' && displayName) { %>
        <th class="text-center col-3">TeamName</th>
        <th class="text-center col-2">Founded</th>
        <th class="text-center col-5">KeyPlayers</th>
        <th class="text-center col-1"></th>
        <th class="text-center col-1"></th>
    <% } else { %>
    <th class="text-center col-3">TeamName</th>
        <th class="text-center col-2">Foudned</th>
        <th class="text-center col-5">KeyPlayers</th>
    <% } %>

    </tr>
    <!-- Repeat the template -->
    <% for(let count=0; count < TeamList.length; count++) { %>
        <tr class="d-flex">
        <% if(typeof displayName=='string' && displayName) { %>
            <td class="text-center col-3"><%= TeamList[count].TeamName %></td>
            <td class="text-center col-2"><%= TeamList[count].Founded %></td>
            <td class="text-center col-5"><%= TeamList[count].KeyPlayers %></td>
            <td class="text-center col-1">
                <a href="/teamlist/edit/<%= TeamList[count]._id %>"
                    class="btn btn-primary">
                    <i class="fas fa-pencil-alt"></i> Edit </a>
            </td>
            <td class="text-center col-1">
                <a href="/teamlist/delete/<%= TeamList[count]._id %>" onclick="return confirm('Are you sure you want to delete this concert entry?')"
                    class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Delete </a>
            </td>
        <% } else { %>
            <td class="text-center col-3"><%= TeamList[count].TeamName %></td>
            <td class="text-center col-2"><%= TeamList[count].Founded %></td>
            <td class="text-center col-5"><%= TeamList[count].KeyPlayers %></td>
        <% } %>       
        </tr>
    <% } %>
    </table>
</div>
</div>
</main>
<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>