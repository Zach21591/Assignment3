<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <!--Creates a form for the user to add the team name-->
                <div class="form-group">
                    <label for="teamNameTextField">Team Name</label>
                    <input type="text" class="form-control"
                    id="teamNameTextField"
                    placeholder="Enter the Team Name"
                    name="TeamName" required>
                </div>

                <!--Creates a form for the user to add the year the team was founded-->
                <div class="form-group">
                    <label for="foundedTextField">Founded Year</label>
                    <input type="text" class="form-control"
                    id="foundedTextField"
                    placeholder="Enter the Teams Founded Year"
                    name="Founded" required>
                </div>
                
                <!--Creates a form for the user to add the key players of the team-->
                <div class="form-group">
                    <label for="keyPlayersTextField">Key Players</label>
                    <input type="text" class="form-control"
                    id="keyPlayersTextField"
                    placeholder="Enter the Key Players"
                    name="KeyPlayers" required>
                </div>
                <br>
                
                <button class="btn btn-success" type="submit">
                    <!--Adds a button to submit the added document of the mongodb-->
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <!--Cancels the changes made to the mongodb document-->
                    <a href="/teamlist" class="btn btn-danger">
                        <i class="fa-solid fa-xmark"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>



<%- include ../partials/bottom_nav.ejs %>  

